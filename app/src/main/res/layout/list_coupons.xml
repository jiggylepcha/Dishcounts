<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coupon_layout">

    <androidx.cardview.widget.CardView
        android:id="@+id/coupon_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

        <ImageView
            android:id="@+id/coupon_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/discount_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:text="50%"
            android:layout_toRightOf="@+id/coupon_image"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />

            <TextView
                android:id="@+id/upto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/discount_percentage"
                android:text="upto"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                 />
            <TextView
                android:id="@+id/valid_till"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="valid till"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/upto"
                />
            <TextView
                android:id="@+id/coupon_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="26dp"
                android:layout_below="@id/upto"
                android:layout_toRightOf="@id/discount_percentage"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/valid_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31/9"
                android:textSize="26dp"
                android:layout_below="@id/valid_till"
                android:layout_toRightOf="@id/coupon_value"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>